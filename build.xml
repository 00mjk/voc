<project name="MyProject" default="dist" basedir=".">
  <description>
    Build Python support libraries for voc
  </description>

  <!-- set global properties for this build -->
  <property name="src" location="python"/>
  <property name="build" location="build"/>
  <property name="dist" location="dist"/>

  <target name="compile-android" description="Compile the Android-specific source">
    <mkdir dir="${build}/android"/>
    <javac includeantruntime="false" destdir="${build}/android">
      <src path="${src}/common" />
      <src path="${src}/android" />
    </javac>
  </target>

  <target name="compile-oracle" description="Compile the Oracle-specific source">
    <mkdir dir="${build}/oracle"/>
    <javac includeantruntime="false" destdir="${build}/oracle">
      <src path="${src}/common" />
      <src path="${src}/oracle" />
    </javac>
  </target>

  <target name="dist-android" depends="compile-android" description="Generate Android jar file">
    <mkdir dir="${dist}"/>

    <jar jarfile="${dist}/python-android.jar" basedir="${build}/android"/>
  </target>

  <target name="dist-oracle" depends="compile-oracle" description="Generate Oracle jar file">
    <mkdir dir="${dist}"/>

    <jar jarfile="${dist}/python.jar" basedir="${build}/oracle"/>
  </target>

  <target name="dist" depends="dist-android,dist-oracle" description="Generate all jar files"/>

  <target name="clean" description="clean up">
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>